{
  "name": "ghoststudio-carousel",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "description": "Interactive 3D Ghost Studio carousel for Webflow embedding",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:webflow": "vite build && echo 'Build complete! Upload /dist folder contents to your hosting for Webflow embedding.'",
    "preview": "vite preview",
    "package": "npm run build && npm run package:zip && npm run package:tar",
    "package:zip": "mkdir -p releases && zip -r releases/ghoststudio-carousel-v$(node -p \"require('./package.json').version\").zip dist/* -x '*.DS_Store'",
    "package:tar": "mkdir -p releases && tar -czf releases/ghoststudio-carousel-v$(node -p \"require('./package.json').version\").tar.gz --exclude='*.DS_Store' dist/"
  },
  "devDependencies": {
    "vite": "^6.3.1"
  },
  "dependencies": {
    "gsap": "^3.12.7",
    "three": "^0.175.0",
    "three-custom-shader-material": "^6.3.5",
    "troika-three-text": "^0.52.4",
    "vite-plugin-glsl": "^1.4.0",
    "zustand": "^5.0.5"
  }
}
